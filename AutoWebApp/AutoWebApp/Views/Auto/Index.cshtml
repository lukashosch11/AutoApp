@model List<AutoWebApp.Entities.Auto>

@{
    ViewData["Title"] = "Auto Übersicht";
}

<h1>Autos</h1>

<a href="/Auto/New" class="btn btn-primary">New Auto</a>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Marke</th>
        <th>Modell</th>
        <th>Preis</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    
    @{
        foreach (var auto in Model)
        {
            <tr>
                <td>@(auto.Autoid)</td>
                <td>@(auto.Marke)</td>
                <td>@(auto.Modell)</td>
                <td>@(auto.Preis)</td>
                <td>
                    <a class="btn" href="/Auto/Edit?id=@(auto.Autoid)">✏️ Edit</a>
                    <a class="btn" href="/Auto/Delete?id=@(auto.Autoid)">❌ Delete</a>
                </td>
            </tr>
        }
    }
    
    </tbody>
</table>

